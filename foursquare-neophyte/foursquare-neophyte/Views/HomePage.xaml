<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:SuaveControls.Views;assembly=SuaveControls.FloatingActionButton"
             x:Class="foursquare_neophyte.Views.HomePage"
    Padding="0, 5, 20, 5">
    <ContentPage.Content>
        <AbsoluteLayout
            x:Name="absContent" 
            VerticalOptions="FillAndExpand" 
            HorizontalOptions="FillAndExpand">
            
            <ListView x:Name="lstNotes"
                      HorizontalOptions="FillAndExpand"
                      VerticalOptions="FillAndExpand">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Title}" Detail="{Binding Details}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            
            <views:FloatingActionButton
                x:Name="fabAddNote" 
                WidthRequest="60"
                HeightRequest="60" 
                Image="ic_add_white.png"
                ButtonColor="#FF9800"
                AbsoluteLayout.LayoutFlags="PositionProportional"
                AbsoluteLayout.LayoutBounds="1, 1, AutoSize, AutoSize"
                Margin="0, 0, 0, 10"/>
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>