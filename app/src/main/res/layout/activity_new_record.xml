<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.inveniotechnologies.neophyte.ui.NewRecord">

    <ScrollView
        android:id="@+id/mScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title:"/>

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/cmb_title"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:entries="@array/titlesList"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Full Name:"/>

            <EditText
                android:id="@+id/txt_full_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Home Address:"/>

            <EditText
                android:id="@+id/txt_home_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textAutoComplete|textMultiLine" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Mobile:"/>

            <EditText
                android:id="@+id/txt_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Home Tel:"/>

            <EditText
                android:id="@+id/txt_home_tel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Office Tel:"/>

            <EditText
                android:id="@+id/txt_office_tel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Email Address:" />

            <EditText
                android:id="@+id/txt_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="How did you find out about us:" />

            <EditText
                android:id="@+id/txt_how_you_found_us"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textAutoComplete|textAutoCorrect|textMultiLine" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Birthday:"/>

            <Button
                android:id="@+id/btn_select_dob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Select Date" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Date of spiritual rebirth:"/>

            <Button
                android:id="@+id/btn_spiritual_rebirth_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Select Date" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Age Group:"/>

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/cmb_age_group"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:entries="@array/ageGroupList"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="My decision today:"/>

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/chk_commit_life"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I want to commit my life to Christ."/>

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/chk_renew_commitment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I want to renew my commitment to Christ."/>

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/chk_be_baptized"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I want to be baptized."/>

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/chk_talk_pastorate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I want to talk to members of the pastorate."/>

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/chk_become_member"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I want to become a member of this Church."/>

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/chk_discover_maturity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I want to discover spiritual maturity."/>

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/chk_discover_ministry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I want to discover my ministry."/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Comments/Prayer Points:"/>

            <EditText
                android:id="@+id/txt_comments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textAutoComplete|textAutoCorrect|textMultiLine" />

            <Button
                android:id="@+id/btn_save_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@color/colorAccent"
                android:text="Save"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
